<script is:inline>
    fetch("https://api.voicenext.app/api/v1/newsletter/activate",
    {
        method: "POST",
        headers: {
            "Content-Type": "application/json",
        },
        body: JSON.stringify({
            activation_key: new URLSearchParams(location.search).get("activation_key"),
        }),
    }).then((res) => {
        location.href = "/?activated=true";
    });
</script>